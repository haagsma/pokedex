<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.haagsma.poke" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PokeToso</name>
    <description>An PokedToso.</description>
    <author email="poke@haagsma.com.br" href="http://haagsma.com.br/">PokeToso Team</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="ScrollEnabled" value="false" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="8000" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
    <plugin name="cordova-plugin-statusbar" spec="2.4.2" />
    <plugin name="cordova-plugin-device" spec="2.0.2" />
    <plugin name="cordova-plugin-splashscreen" spec="5.0.2" />
    <plugin name="cordova-plugin-ionic-webview" spec="^4.0.0" />
    <plugin name="cordova-plugin-ionic-keyboard" spec="^2.0.5" />
    <plugin name="cordova-plugin-nativeaudio" spec="^3.0.9" />
    <platform name="android">
        <icon density="ldpi" src="src/assets/icon.png" />
        <icon density="mdpi" src="src/assets/icon.png" />
        <icon density="hdpi" src="src/assets/icon.png" />
        <icon density="xhdpi" src="src/assets/icon.png" />
        <icon density="xxhdpi" src="src/assets/icon.png" />
        <icon density="xxxhdpi" src="src/assets/icon.png" />
        <splash density="land-ldpi" src="src/assets/login.png" />
        <splash density="land-mdpi" src="src/assets/login.png" />
        <splash density="land-hdpi" src="src/assets/login.png" />
        <splash density="land-xhdpi" src="src/assets/login.png" />
        <splash density="land-xxhdpi" src="src/assets/login.png" />
        <splash density="land-xxxhdpi" src="src/assets/login.png" />
        <splash density="port-ldpi" src="src/assets/login.png" />
        <splash density="port-mdpi" src="src/assets/login.png" />
        <splash density="port-hdpi" src="src/assets/login.png" />
        <splash density="port-xhdpi" src="src/assets/login.png" />
        <splash density="port-xxhdpi" src="src/assets/login.png" />
        <splash density="port-xxxhdpi" src="src/assets/login.png" />
    </platform>
    <engine name="android" spec="^7.0.0" />
</widget>
